// Set up the scene
var scene = new THREE.Scene();

// Set up the camera
var camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
camera.position.set(0, 5, 10);

// Set up the renderer
var renderer = new THREE.WebGLRenderer();
renderer.setSize(window.innerWidth, window.innerHeight);
document.body.appendChild(renderer.domElement);

// Create the floor
var floorGeometry = new THREE.PlaneGeometry(10, 10, 10, 10);
var floorMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });
var floor = new THREE.Mesh(floorGeometry, floorMaterial);
floor.rotation.x = -Math.PI / 2;
scene.add(floor);

// Create the walls
var wallGeometry = new THREE.BoxGeometry(1, 2, 0.1);
var wallMaterial = new THREE.MeshBasicMaterial({ color: 0x808080 });
var wall1 = new THREE.Mesh(wallGeometry, wallMaterial);
var wall2 = new THREE.Mesh(wallGeometry, wallMaterial);
var wall3 = new THREE.Mesh(wallGeometry, wallMaterial);
var wall4 = new THREE.Mesh(wallGeometry, wallMaterial);
wall1.position.set(-5, 1, 0);
wall2.position.set(5, 1, 0);
wall3.position.set(0, 1, -5);
wall4.position.set(0, 1, 5);
scene.add(wall1);
scene.add(wall2);
scene.add(wall3);
scene.add(wall4);

// Render the scene
function animate() {
    requestAnimationFrame(animate);
    renderer.render(scene, camera);
}
animate();
